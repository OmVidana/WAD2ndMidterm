<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/icon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/styles.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>Heroes!</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="header">
      <div class="header-title" onclick="location.href='/'">
        <h1>SUPERHEROE PEDIA</h1>
      </div>
      <div class="search-bar">
          <div class="container-fluid">
            <form class="d-flex" role="search" action="/search" method="post">
              <input class="form-control me-2 bg-dark" name="heroSearch" type="search" style="width:200px" placeholder="Search" aria-label="Search">
              <button class="btn material-icons btn-outline-light btn-dark" type="submit">search</button>
            </form>
          </div>
      </div>
    </div>
    
      <div class="card-container">
        <div class="left-arrow">
          <form action="/previous" method="post">
            <button class="btn btn-outline-dark arrows material-icons">
              arrow_back_ios
            </button>
          </form>
        </div>
        <div class="card">
            <img src="<%=imageHeroe%>" alt="<%=name%> se muriÃ³">
            <div class="card-body">
              <h2 class="information"><%=name%></h2>
              <div class="card-body-content">
                  <p class="information">
                    ID: <%=id%><br>
                    Full Name: <%=fullname%><br>
                    Stats:
                    <% for(var stat in powerstats){ %>
                      <%= stat %>: <%= powerstats[stat] %>, 
                    <% } %>
                    <br>
                    Birth Place: <%=placeOfBirth%><br>
                    Aliases: <%=aliases%><br>
                    Biography: <%=smallBiography%><br>
                    Appearance:
                    <% for(var atributtes in appearance){ %>
                      <% appearance  + appearance[atributtes] %> 
                      <%= atributtes %>: <%= appearance[atributtes] %>, 
                    <% } %>
                  </p>
              </div>
            </div>
        </div>
        <div class="right-arrow">
          <form action="/next" method="post">
            <button class="btn btn-outline-dark arrows material-icons">
              arrow_forward_ios
            </button>
          </form>
        </div>
      </div>
  </body>
</html>